<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewStyle" parent="AppTheme">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/nanumsquare</item>
        <item name="color">@color/colorBlueBerry</item>
    </style>


    <style name="InfoStyle" parent="TextViewStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/nanumsquare</item>
        <item name="android:textColor">@color/colorBlueBerry</item>
    </style>


    <style name="TextViewSmallStyle" parent="AppTheme">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/nanumsquare</item>
        <item name="color">@color/colorBlueBerry</item>
    </style>

    <style name="ButtonStyle" parent="TextViewStyle">
        <item name="android:textAlignment">center</item>
        <item name="color">@color/colorBlueBerry</item>
        <item name="android:fontFamily">@font/nanumsquare</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="IconButtonStyle" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="android:padding">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="color">@color/colorBlueBerry</item>
        <item name="android:fontFamily">@font/nanumsquare</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="LayoutStyle" parent="AppTheme">
        <item name="android:fontFamily">@font/nanumsquare</item>
    </style>

    <style name="EditTextStyle" parent="TextViewStyle">
        <item name="android:fontFamily">@font/nanumsquare</item>
    </style>

    <style name="SpinnerStyle" parent="TextViewStyle">
        <item name="android:fontFamily">@font/nanumsquare</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="ImageViewStyle" parent="TextViewStyle"></style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomButton" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">


    </style>

    <style name="CustomPopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/custom_anim_from_top</item>
        <item name="android:windowExitAnimation">@anim/custom_anim_to_top</item>
    </style>


</resources>
