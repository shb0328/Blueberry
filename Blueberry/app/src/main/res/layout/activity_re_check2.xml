<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReCheck2"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:gravity="top|center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="10sp">

        <ImageView
            android:id="@+id/business_card_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="150dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/recheck2_image"
            android:maxHeight="263dp"
            android:src="@drawable/testcard" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="10sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:baselineAligned="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/name_confirm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:text="@string/recheck2_name2"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/name_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="text"
                android:text="@string/recheck2_name1"
                tools:ignore="LabelFor"
                tools:targetApi="o" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:baselineAligned="true"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/phone_confirm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recheck2_phone2" />


            <EditText
                android:id="@+id/phone_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="text"
                android:text="@string/recheck2_phone1"
                android:textSize="@dimen/recheck2_question1"
                tools:ignore="LabelFor"
                tools:targetApi="o" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:baselineAligned="true"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/mail_confirm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:text="@string/recheck2_mail2"
                tools:targetApi="o" />



            <EditText
                android:id="@+id/mail_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="text"
                android:text="@string/recheck2_mail1"
                android:textSize="@dimen/recheck2_question1"
                tools:ignore="LabelFor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:baselineAligned="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/company_confirm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:text="@string/recheck2_company2"
                tools:targetApi="o" />



            <EditText
                android:id="@+id/company_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="text"
                android:text="@string/recheck2_company1"
                android:textSize="@dimen/recheck2_question1"
                tools:ignore="LabelFor"
                tools:targetApi="o" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/recheck1_margin"
        android:baselineAligned="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ToThePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recheck2_toPhone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            />
    </LinearLayout>


</LinearLayout>