        <!--                android:layout_weight="2"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:hint="선택한 회사 수정"-->
        <!--                android:importantForAutofill="no"-->
        <!--                android:inputType="textCapWords"-->
        <!--                android:textSize="@dimen/recheck2_question1" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_recheck12_selectionMargin"
                android:text="@string/recheck_company"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/recheck1_question1" />
            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:entries="@array/recheck_company" />



        </LinearLayout>


        <!--            <EditText-->
        <!--                android:id="@+id/mail_confirm"-->
        <!--                android:layout_width="0dp"-->
        <!--                android:layout_weight="2"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:hint="선택한 이메일 수정"-->
        <!--                android:importantForAutofill="no"-->
        <!--                android:inputType="textEmailAddress"-->
        <!--                android:textSize="@dimen/recheck2_question1" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:baselineAligned="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_recheck12_selectionMargin"
                android:text="@string/recheck_email"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/recheck1_question1" />
            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:entries="@array/recheck_address"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/recheck1_margin"
        android:layout_weight="0.5">

        <Button
            android:id="@+id/finishButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recheck_next"
            android:textSize="@dimen/recheck1_question1" />


    </LinearLayout>


</LinearLayout>
