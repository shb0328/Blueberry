<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_list">

    <fragment
        android:id="@+id/navigation_option"
        android:name="ssu.cheesecake.blueberry.ui.option.Optionragment"
        android:label="@string/title_option"
        tools:layout="@layout/fragment_option" />
    <fragment
        android:id="@+id/navigation_list"
        android:name="ssu.cheesecake.blueberry.ui.list.ListFragment"
        android:label="@string/title_list"
        tools:layout="@layout/fragment_list" />

    <fragment
        android:id="@+id/navigation_camera"
        android:name="ssu.cheesecake.blueberry.ui.camera.CameraFragment"
        android:label="@string/title_camera"
        tools:layout="@layout/fragment_camera" />

    <fragment
        android:id="@+id/navigation_gallary"
        android:name="ssu.cheesecake.blueberry.ui.gallary.GallaryFragment"
        android:label="@string/title_gallary"
        tools:layout="@layout/fragment_gallary" />
</navigation>